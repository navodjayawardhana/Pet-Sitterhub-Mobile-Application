<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conCard3"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="358dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/conImage1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimg"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/concname1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conpname1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/conImage1"
            android:text="Customer Name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/conpname1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/conImage1"
            android:text="Pet Name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/concaregiveqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/conpname1"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="94dp"
            android:layout_toEndOf="@id/conImage1"
            android:maxLines="1"
            android:text="Care Giver Name:-"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conaregiver"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/concname1"
            android:layout_marginStart="78dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/conImage1"
            android:maxLines="1"
            android:text="Pending......"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/feedback"
            android:layout_width="339dp"
            android:layout_height="76dp"
            android:layout_below="@+id/concname1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/lavender_border"
            android:gravity="center"
            android:hint="Type your'r Feedback"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="100dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/confeedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:backgroundTint="@color/teal_200"
                android:drawableLeft="@drawable/baseline_connect_without_contact_24"
                android:gravity="center"
                android:text="Send feedback" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback"
            android:layout_alignStart="@+id/conImage1"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/feedback6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/concname1"
            android:layout_marginStart="-89dp"
            android:layout_marginTop="144dp"
            android:layout_toEndOf="@id/conImage1"
            android:gravity="center"
            android:maxLines="1"
            android:text="Enter Feedback Number(0 to 10):-"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/feedbacknum"
            android:layout_width="62dp"
            android:layout_height="30dp"
            android:layout_below="@+id/concname1"
            android:layout_marginStart="157dp"
            android:layout_marginTop="142dp"
            android:layout_toEndOf="@id/conImage1"
            android:background="@drawable/lavender_border"
            android:gravity="center"
            android:maxLines="1"
            android:hint="num"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>