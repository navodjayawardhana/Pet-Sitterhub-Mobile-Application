<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity"
    android:background="@drawable/userbc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Upload Pet Data"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/lavender_border"
                    android:orientation="vertical"
                    android:padding="20dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:text="Customer Name"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/uploadTopic"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/brownborder"
                            android:gravity="start|center_vertical"
                            android:hint="Customer Name"
                            android:padding="16dp"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="186dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="Customer Address "
                        android:textColor="@color/Greean"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/uploadCaddress"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:layout_gravity="center"
                        android:background="@drawable/brownborder"
                        android:gravity="start|center_vertical"
                        android:hint="Enter Address"
                        android:padding="16dp"
                        android:textColor="@color/Greean" />

                    <EditText
                        android:id="@+id/uploadPname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/brownborder"
                        android:gravity="start|center_vertical"
                        android:hint="Pet Name"
                        android:padding="16dp"
                        android:textColor="@color/Greean" />

                    <EditText
                        android:id="@+id/uploadPage"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/brownborder"
                        android:gravity="start|center_vertical"
                        android:hint="Pet Age"
                        android:padding="16dp"
                        android:textColor="@color/Greean" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Uplod pet Picture "
                        android:textColor="@color/Greean"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/uploadImage"
                        android:layout_width="320dp"
                        android:layout_height="320dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/uploadimg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="147dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:text="Breed"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />

                        <RadioGroup

                            android:layout_width="164dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/UplodBreedyes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:textColor="@color/Greean" />

                            <RadioButton
                                android:id="@+id/UplodBreedno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="@color/Greean" />
                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="144dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:text="Sex"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />

                        <RadioGroup

                            android:layout_width="164dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/UplodSexmale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textColor="@color/Greean" />

                            <RadioButton
                                android:id="@+id/UplodSexfemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:textColor="@color/Greean" />
                        </RadioGroup>


                    </LinearLayout>

                    <EditText
                        android:id="@+id/uploadLang"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:gravity="start|center_vertical"
                        android:hint="Pet Colour"
                        android:padding="16dp"
                        android:textColor="@color/Greean" />

                    <EditText
                        android:id="@+id/uploadDesc"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:gravity="start|center_vertical"
                        android:hint="Enter description"
                        android:padding="16dp"
                        android:textColor="@color/Greean" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/feeButton"
                            android:layout_width="191dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:text="Fees Generate"
                            android:textSize="18sp"
                            app:cornerRadius="20dp" />

                        <TextView
                            android:id="@+id/FeesView"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="Fees"
                            android:textColor="@color/Greean"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="181dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:text="Start Date"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/uploadStart"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/brownborder"
                            android:gravity="start|center_vertical"
                            android:hint="Start"
                            android:padding="16dp"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="181dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:text="End Date"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/uploadEnd"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/brownborder"
                            android:gravity="start|center_vertical"
                            android:hint="End"
                            android:padding="16dp"
                            android:textColor="@color/Greean"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:text="Save"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>